<h1>Blog Pages</h1>
<hr />
<%= link_to "New Page", new_page_path %>
<% @pages.each do |page| %>
  <h2> <%= page.title %> </h2>
  <%= link_to "Show Page", page_path(page.id) %>
  <%= link_to "Edit Page", edit_page_path(page.id) %>
  <%= link_to "Delete Page", page_path(page.id), method: :delete %>
<% end %>